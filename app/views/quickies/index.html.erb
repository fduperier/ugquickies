<h1>Listing quickies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
			<th>Date</th>
      <th>User group</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quickies.each do |quickie| %>
      <tr>
        <td><%= quickie.title %></td>
        <td><%= quickie.description %></td>
        <td><%= quickie.date %></td>
        <td><%= quickie.user_group.name %></td>
        <td><%= quickie.creator.name %></td>
        <td><%= link_to 'Show', quickie %></td>
        <td><%= link_to 'Edit', edit_quickie_path(quickie) %></td>
        <td><%= link_to 'Destroy', quickie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quickie', new_quickie_path %>
