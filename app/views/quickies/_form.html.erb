<%= simple_form_for(@quickie, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: :true %>
    <%= f.input :description, required: :true %>
    <%= f.input :date, required: :true, as: :date_time_picker, "data-format" => "dd/MM/yyyy hh:mm"  %>
    <%#= f.input :hashtag, required: :true %>
		<%= f.input :hashtag, required: :true do %>
			<div class="input-group">
			  <span class="input-group-addon">#</span>
				<%= f.input_field :hashtag, class: "form-control" %>
			</div>
		<% end %>
    <%= f.association :user_group, required: :true %>
  </div>

  <div class="form-actions text-right">
    <%= link_to t('simple_form.buttons.cancel'), :back, { class: "btn btn-default" } %>
    <%= f.button :submit, { class: "btn-primary" } %>
  </div>
<% end %>
