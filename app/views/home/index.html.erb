<h3>Welcome To User Group Quickies</h3>
<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>

<div class="container">
  <div class="row">
    <!-- Past quickies -->
    <div class="col-md-6">
      <h2 class="text-center">Past quickies</h2>
      <% if @past_quickies.empty? %>
        No past quickies yet
      <% else %>
        <% @past_quickies.each do |quickie| %>
          <%= render partial: 'quickies/show', locals: { quickie: quickie } %>
        <% end %>

      <!-- Top 3 -->
      <h3 class="text-center">Top 3</h3>
        <% @past_top3.each do |quickie| %>
          <%= render partial: 'quickies/show', locals: { quickie: quickie } %>
        <% end %>
      <% end %>

    </div>

    <!-- Future quickies -->
    <div class="col-md-6">
      <h2 class="text-center">Future quickies</h2>
      <% if @future_quickies.empty? %>
        No future quickies yet
      <% else %>
        <% @future_quickies.each do |quickie| %>
          <%= render partial: 'quickies/show', locals: { quickie: quickie } %>
        <% end %>

        <!-- Top 3 -->
        <h3 class="text-center">Top 3</h3>
        <% @future_top3.each do |quickie| %>
          <%= render partial: 'quickies/show', locals: { quickie: quickie } %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
